<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutThongBao"
        android:layout_margin="10dp"
        android:backgroundTint="#FFC697"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/AvtThongbao"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:background="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TenThongBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tên thông báo"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/NoiDungThongBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:hint="Nội dung"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/DateThongBao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="10/12/2023"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>