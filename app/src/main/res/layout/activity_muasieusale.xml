<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Muasieusale_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtMuasieusale"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF8C00"
        android:drawableLeft="@drawable/ic_back_24"
        android:gravity="center"
        android:onClick="iconButtonClick"
        android:text="Mùa siêu Sale"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <ViewFlipper
            android:id="@+id/viewFlipper2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="80dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivsummer"
                android:layout_width="440dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/sale_png" />

            <ImageView
                android:id="@+id/ivnangdong"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                app:srcCompat="@drawable/nangdong_png" />
        </ViewFlipper>


        <ViewFlipper
            android:id="@+id/viewFlipper3"
            android:layout_width="409dp"
            android:layout_height="225dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper2">

            <ImageView
                android:id="@+id/ivsummerspc"
                android:layout_width="471dp"
                android:layout_height="257dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFlipper2"
                app:srcCompat="@drawable/summer_png" />

            <ImageView
                android:id="@+id/ivchuyenphat"
                android:layout_width="471dp"
                android:layout_height="257dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFlipper2"
                app:srcCompat="@drawable/poster" />
        </ViewFlipper>

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewFlipper3">

            <ImageView
                android:id="@+id/salesp"
                android:layout_width="438dp"
                android:layout_height="327dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFlipper2"
                app:srcCompat="@drawable/chuyenphatnhanh_png" />

            <ImageView
                android:id="@+id/ivsale2"
                android:layout_width="match_parent"
                android:layout_height="311dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewFlipper2"
                app:srcCompat="@drawable/shipnhanh" />


        </ViewFlipper>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>