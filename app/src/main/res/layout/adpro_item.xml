<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_margin = "15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="183dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="ID: "
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ma_sp"
            android:layout_width="183dp"
            android:layout_height="37dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Mã sản phẩm"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/ten_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Tên sản phẩm"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_below="@+id/ma_sp"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ten_sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Giá: "
            android:textColor="#FF9800"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ten_sp"
            android:layout_marginLeft="45dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Giá"
            android:textColor="#FF9800"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gia"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Số lượng: "
            android:textColor="#A5A4A4"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/so_luong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gia"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Số lượng"
            android:textColor="#A5A4A4"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/mo_ta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/so_luong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Mô tả"
            android:textColor="#A5A4A4"
            android:textSize="12dp"
            android:textAlignment="textStart"/>

        <LinearLayout
            android:layout_below="@+id/mo_ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>