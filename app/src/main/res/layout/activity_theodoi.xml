                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="30dp"
                android:text="Chờ giao hàng"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/my_line5"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/my_line5"
                app:layout_constraintTop_toBottomOf="@+id/toolbar03" />


        </LinearLayout>

        <TextView
            android:id="@+id/donhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:gravity="center"
            android:text="Đơn hàng"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.445"
            app:layout_constraintRight_toLeftOf="@+id/timkiem"
            app:layout_constraintStart_toStartOf="@+id/toolbar03"
            app:layout_constraintTop_toTopOf="@+id/toolbar03" />

        <ImageView
            android:id="@+id/boxchat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="356dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toRightOf="@+id/toolbar03"
            app:layout_constraintStart_toStartOf="@+id/toolbar03"
            app:layout_constraintTop_toTopOf="@+id/toolbar03"
            app:srcCompat="@drawable/mess_icon" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/timkiem"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toLeftOf="@+id/boxchat"
            app:layout_constraintStart_toStartOf="@+id/toolbar03"
            app:layout_constraintTop_toTopOf="@+id/toolbar03"
            app:srcCompat="@drawable/ic_search_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="352dp"
            android:orientation="horizontal"
